<h1>Заявки на поддержку</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Название организации</th>
    <th>Контактное лицо</th>
    <th>Email</th>
    <th>Телефон</th>
    <th>Комментарий</th>
    <th>Имя документа</th>
    <th></th>
  </tr>

<% @requisitions.each do |requisition| %>
  <tr>
    <td><%= requisition.name_organization%></td>
    <td><%= requisition.contact_person %></td>
    <td><%= requisition.email %></td>
    <td><%= requisition.phone_number %></td>
    <td><%= requisition.comment %></td>
    <td><%= requisition.doc_uid %></td>
    <td><%= link_to 'Удалить', requisition,class: 'btn btn-danger', method: :delete,confirm: 'Are you sure?' %></td>
  </tr>
<% end %>
</table>

